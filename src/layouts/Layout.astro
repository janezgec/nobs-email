---
import "./../styles/global.css";
import Header from "../components/Header";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen bg-gray-100 text-gray-900">
    <main class="max-w-7xl container mx-auto px-4 py-8">
      <!-- Header -->
      <Header currentPath={Astro.url.pathname} client:load />
      <!-- Main Content -->
      <slot />

      <footer
        class="mt-16 border-t pt-8 text-center text-sm text-muted-foreground"
      >
        <p class="mb-6">Questions? <a href="mailto:janez@pagat.net">Write me an email</a></p>
        <p>&copy; {new Date().getFullYear()} NoBS. All rights reserved.</p>
        <a
          href="https://github.com/janezgec/nobs-email"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 mt-2 text-muted-foreground hover:text-foreground transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
          View on GitHub
        </a>
      </footer>
    </main>
  </body>
</html>
